@model designhub.Models.DocumentGroupViewModels.CreateDocumentGroupViewModel

@{
    ViewData["Title"] = "Add a file";
}

<h2 class="text-center page_header">Add A New File</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4 class="text-center page_info projects_info">What is the name for the file you want to keep track of?</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="DocumentGroup.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentGroup.Name" class="form-control" />
                <span asp-validation-for="DocumentGroup.Name" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" name="ProjectID" value="@Model.ProjectID" />
        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Add File" class="btn btn-lg btn-default" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
