@model designhub.Models.DocumentGroupViewModels.DocumentGroupsList

@{
    ViewData["Title"] = "Index";
}

<h2>@Model.Project.Name</h2>

<p>
    <a asp-action="Create" asp-route-id="@Model.Project.ProjectID">Create New</a> | 
    <a asp-controller="Projects" asp-action="Index">Back To Projects List</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
                <th>
                   File Name
                </th>
                <th>
                   Date Created
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DocumentGroups)
{
    <tr data-toggle="collapse" data-target=".@item.DocumentGroupID-accordian" class="accordion-toggle">
        <td>
            @Html.DisplayFor(modelItem => item.Name) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>

        <td>
            <a class="btn" asp-controller="Documents" asp-action="Create" asp-route-id="@item.DocumentGroupID"> Upload New Version</a> |
            <a class="btn" asp-action="Delete" asp-route-id="@item.DocumentGroupID">Delete</a> 

        </td>
    </tr>
    
        @foreach (var doc in Model.Documents)
        {
            <tr class="collapse hiddenRow @item.DocumentGroupID-accordian">
            @if (doc.DocumentGroupID == item.DocumentGroupID)
             {
                <td class=" hiddenRow">
                  @doc.DocumentPath 
                </td>
                <td>
                    @doc.DateCreated
                </td>
                <td>
                    <a class="btn btn-success " asp-controller="Documents" asp-action="Download" asp-route-id="@doc.DocumentID">Download</a>
                    <a class="btn btn-danger" asp-controller="Documents" asp-action="Delete" asp-route-id="@doc.DocumentID">Delete Version</a>
                </td>
             }
            </tr>
        }
}
    </tbody>
</table>
