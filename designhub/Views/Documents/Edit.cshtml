@model designhub.Models.Document

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Document</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="DocumentID" />
        <div class="form-group">
            <label asp-for="DateCreated" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentPath" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentPath" class="form-control" />
                <span asp-validation-for="DocumentPath" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentGroupID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="DocumentGroupID" class="form-control" asp-items="ViewBag.DocumentGroupID"></select>
                <span asp-validation-for="DocumentGroupID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
