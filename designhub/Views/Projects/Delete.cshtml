@model designhub.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h2>Remove This Project</h2>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>Project @Model.Name will be permenately deleted</h4>
    <hr />
   
        <input type="hidden" asp-for="ProjectID" value="@Model.ProjectID" />
        <input type="hidden" asp-for="Name" value="@Model.Name" />
        <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated" />

    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Yes I Understand" class="btn btn-default" /> 
            <a asp-action="Index" class="btn btn-default">No Take Me Back</a>
        </div>
    </form>
</div>
