@model designhub.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h2  class="text-center page_header">Remove This Project</h2>

<h3 class="text-center are_you_sure">Are you sure you want to delete this project?</h3>
<div>
    <h4 class="text-center are_you_sure ">Project @Model.Name will be permenately deleted</h4>
    <hr />
   
        <input type="hidden" asp-for="ProjectID" value="@Model.ProjectID" />
        <input type="hidden" asp-for="Name" value="@Model.Name" />
        <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated" />

    
    <form asp-action="Delete">
        <div class="form-actions no-color text-center">
            <input type="submit" value="Yes I Understand" class="btn btn-lg btn-default" /> 
            <a asp-action="Index" class="btn btn-default btn-lg ">No Take Me Back</a>
        </div>
    </form>
</div>
